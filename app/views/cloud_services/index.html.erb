<% breadcrumb :cloud_services %>


<div class="row">

  <!-- Left column (filters) -->
  <div class="col-md-3">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('cloud_service.filter') %></h5>
      </div>
      <div class="ibox-content">

        <%= form_for(:cloud_service, url: cloud_services_filter_path, remote: true, html: { id: :filter_cloud_services }) do |f| %>
          <div class="form-group">
            <%= f.label :cloud_service_type_id, t('cloud_service_administration.cloud_service_model') %>
            <%= f.select :cloud_service_type_id, options_from_collection_for_select(@cloud_service_types, 'id', 'name'), { include_blank: t('all') }, { class: 'form-control' } %>
          </div>
        <% end %>


      </div>
    </div>
  </div>


  <!-- Right column (Results) -->
  <div class="col-md-9">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t('cloud_service.cloud_services') %></h5>
      </div>

      <div class="ibox-content">
        <!-- Info and Sorting -->
        <div class="row">
          <div class="col-sm-6">
            <div class="pagination-info">
              <%= page_entries_info @cloud_services, entry_name: t('cloud_service.cloud_services') %>
            </div>
          </div>
        </div>

        <!-- Cloud Services -->
        <% unless @cloud_services.nil? || @cloud_services.blank? %>
          <% @cloud_services.each do |cs| %>

            <% if is_iaas?(cs) %>
              <%= render 'cloud_services/partials/iaas_row', cs: cs %>
            <% elsif is_paas?(cs) %>
              <%= render 'cloud_services/partials/paas_row', cs: cs %>
            <% elsif is_saas?(cs) %>
              <%= render 'cloud_services/partials/saas_row', cs: cs %>
            <% end %>

          <% end %>
        <% end %>

        <!-- Pagination -->
        <div class="row">
          <div class="col-lg-12 text-right">
            <%= paginate @cloud_services %>
          </div>
        </div>

      </div>
    </div>
  </div>


</div>