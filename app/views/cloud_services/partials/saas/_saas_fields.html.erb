<div class="form-group">
  <%= f.label :saas_category_ids, t('cloud_service.saas_categories') %>
  <%= f.collection_check_boxes(:saas_category_ids, @saas_categories, :id, :name, include_hidden: false) do |cb| %>
      <div class="i-checks">
        <%= cb.label { cb.check_box + ' ' + t("for_database.saas_categories.#{cb.text}") } %>
      </div>
  <% end %>
</div>
